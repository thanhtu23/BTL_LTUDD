<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_profile_white"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/img_pay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_google"
        tools:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_name_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Google Pay"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_pay"
        app:layout_constraintStart_toEndOf="@+id/img_pay"
        app:layout_constraintTop_toTopOf="@+id/img_pay"
        android:textColor="@color/black" />

    <RadioButton
        android:id="@+id/radio_check_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/black"
        android:buttonTint="@color/green"

        app:layout_constraintBottom_toBottomOf="@+id/tv_name_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_pay" />
</androidx.constraintlayout.widget.ConstraintLayout>